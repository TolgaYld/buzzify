{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "axios": "^1.7.2",
    "dotenv": "^16.4.5",
    "fastify": "^4.27.0",
    "i18next": "^23.11.5",
    "i18next-fs-backend": "^2.3.1",
    "i18next-http-middleware": "^3.6.0",
    "jsonwebtoken": "^9.0.2",
    "luxon": "^3.4.4",
    "mongoose": "^8.5.2",
    "winston": "^3.13.0",
    "winston-mongodb": "^5.1.1"
  },
  "devDependencies": {
    "chai": "^5.1.1",
    "chai-as-promised": "^8.0.0",
    "eslint": "^9.4.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "mocha": "^10.4.0",
    "nodemon": "^3.1.3",
    "nyc": "^17.0.0",
    "prettier": "^3.3.1",
    "rewire": "^7.0.0",
    "sinon": "^18.0.0",
    "sinon-chai": "^3.7.0",
    "supertest": "^7.0.0"
  },
  "scripts": {
    "dev": "yarn workspaces foreach --exclude core --all --parallel --interlaced run dev",
    "start": "yarn workspaces foreach --exclude core --all --parallel --interlaced run start"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": "latest"
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "env": {
      "node": true,
      "es6": true,
      "mocha": true
    },
    "rules": {
      "prettier/prettier": "warn",
      "no-unused-vars": "off"
    }
  },
  "prettier": {
    "singleQuote": false
  }
}