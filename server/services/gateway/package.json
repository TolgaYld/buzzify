{
  "name": "gateway",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:TolgaYld/buzzup.git",
  "author": {
    "name": "Tolga Yildirim",
    "email": "tolga@ty-software.dev"
  },
  "scripts": {
    "start": "NODE_ENV=production node ./index.js",
    "dev": "npm run start-redis && NODE_ENV=test nodemon ./index.js",
    "start-redis": "docker rm -f redis-buzzup || true && docker run --name redis-buzzup -p 6379:6379 -d redis",
    "lint": "eslint ./src/"
  },
  "dependencies": {
    "@TolgaYld/core-buzzup": "*",
    "@graphql-tools/graphql-file-loader": "^8.0.1",
    "@graphql-tools/load": "^8.0.2",
    "apollo-server-express": "^3.13.0",
    "connect-flash": "^0.1.1",
    "ejs": "^3.1.10",
    "express-rate-limit": "^7.4.0",
    "express-session": "^1.18.0",
    "express-validator": "^7.2.0",
    "graphql": "^16.8.1",
    "graphql-subscriptions": "^2.0.0",
    "graphql-tools": "^9.0.1",
    "helmet": "^7.1.0",
    "redis": "^4.7.0"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": "latest"
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "env": {
      "node": true,
      "es6": true,
      "mocha": true
    },
    "rules": {
      "prettier/prettier": "warn",
      "no-unused-vars": "off"
    }
  },
  "prettier": {
    "singleQuote": false
  }
}